<Window x:Class="View.Views.StudentWindows.StudentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="StudentMainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="StudentLabel" Content="Student" HorizontalAlignment="Center" Margin="0,70,0,0"
               VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Absence" Height="37" Width="93" Click="AbsenceButton_Click" />
                <Button Content="Average" Height="37" Width="93" Click="AverageButton_Click" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Grade" Height="37" Width="93" Click="GradeButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>