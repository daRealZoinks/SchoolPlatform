<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,151,0,0">
            <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <TextBox Name="UsernameTextBox" HorizontalAlignment="Center" TextWrapping="NoWrap" VerticalAlignment="Top"
                     Width="180" Height="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0">
            <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <PasswordBox Name="PasswordPasswordBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="180"
                         Height="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        </StackPanel>
        <Button Content="Connect" HorizontalAlignment="Center" Margin="0,261,0,0"
                VerticalAlignment="Top" Click="ConnectButton_Click" />
    </Grid>
</Window>